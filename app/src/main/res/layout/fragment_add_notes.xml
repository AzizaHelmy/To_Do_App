<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_500"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.Notes.AddNotesFragment">
    <!--#3C3B3B-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="#706c61">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="#706c61"
        android:layout_margin="7dp"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/note_titel_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="120dp"
            android:hint="@string/hinttitil"
            android:layout_marginLeft="15dp"
            android:textColorHint="@color/white"
            android:layout_marginRight="15dp"
            android:fontFamily="sans-serif"
            android:textColor="#fff"
            android:textSize="35dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <EditText
            android:id="@+id/note_content_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="260dp"
            android:fontFamily="sans-serif"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:textColorHint="@color/white"
            android:textColor="#fff"
            android:hint="@string/hintdetails"
            android:textSize="35dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
             />

        <com.google.android.material.button.MaterialButton
            android:layout_width="wrap_content"
            android:id="@+id/add_note_butt"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:background="@drawable/button_shape"
            android:clickable="true"
            android:padding="3dp"
            android:shadowColor="#fff"
            android:shadowRadius="33"
            android:text="Add"
            android:textAllCaps="false"
            android:textColor="#313131"
            android:textSize="23sp"
            app:layout_constraintEnd_toEndOf="@id/note_content_et"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/note_content_et" />
    </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>